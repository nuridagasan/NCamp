    <div class="row mb-3">
        <div class="col-6 offset-3">
            <div class="card">
                <img class="card-img-top" src="<%=campsite.image%>" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">
                        <%=campsite.title%>
                    </h5>
                    <p class="card-text">
                        <%= campsite.description %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted">
                        <i>
                            <%= campsite.location%>
                        </i>
                    </li>
                    <li class="list-group-item">Â£ <%= campsite.price %>
                    </li>
                </ul>
                <div class="card-body">
                    <a href="/campsites/<%=campsite._id%>/edit" class="btn btn-outline-success">Edit</a>
                    <a href="/campsites" class="btn btn-outline-primary mx-2">All Campsites</a>
                    <form class="d-inline" action="/campsites/<%=campsite._id%>?_method=DELETE" method="POST">
